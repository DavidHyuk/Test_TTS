<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <EditText
            android:id="@+id/edittext_korean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="한국어 텍스트를 입력하세요"
            android:inputType="text"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toTopOf="@id/textview_latency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_latency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="대기 중..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toTopOf="@id/button_tts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edittext_korean" />

        <Button
            android:id="@+id/button_tts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="🔊 TTS 실행"
            android:layout_margin="16dp"
            android:background="@drawable/ic_launcher_background"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_latency" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_language_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/select_language"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_language_label" />

        <EditText
            android:id="@+id/edittext_korean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_text_hint"
            android:inputType="text"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toTopOf="@id/textview_latency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_language" />

        <TextView
            android:id="@+id/textview_latency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ëŒ€ê¸° ì¤‘..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toTopOf="@id/button_tts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edittext_korean" />

        <Button
            android:id="@+id/button_tts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ”Š TTS ì‹¤í–‰"
            android:layout_margin="16dp"
            android:background="@drawable/ic_launcher_background"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_latency" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>